<h1>Burgers!</h1>

<h2>Burgers that are not devoured</h2>

<ul>
  {{#each burgers}} 
    {{burger_name}}
  {{/each}}
</ul>

<h2>Eat-Da-Burger</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">hungry?</label><br>
    <input type="radio" name="sleepy" value="1" checked> hungry!<br>
    <input type="radio" name="sleepy" value="0"> Devour
  </div>

  <button type="submit">Add Burger</button>
</form>
